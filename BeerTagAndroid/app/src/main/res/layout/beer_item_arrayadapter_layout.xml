<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_beer_item_image"
        android:layout_width="150dp"
        android:layout_height="150dp" />



    <TextView
        android:id="@+id/tv_beer_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_beer_item_image"
        android:gravity="start"
        android:paddingEnd="@dimen/SmallPadding"
        android:paddingStart="@dimen/SmallPadding"
        android:textColor="@color/white"
        android:textSize="@dimen/SmallText" />

    <TextView
        android:id="@+id/tv_beer_rating_item_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_beer_item_name"
        android:layout_toEndOf="@id/iv_beer_item_image"
        android:gravity="end"
        android:paddingEnd="@dimen/SmallPadding"
        android:paddingStart="@dimen/SmallPadding"
        android:textColor="@color/primary"
        android:textSize="@dimen/BeerFieldTextSize" />

    <TextView
        android:id="@+id/tv_beer_rating_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_beer_rating_item_field"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/iv_beer_item_image"
        android:gravity="end"
        android:paddingEnd="@dimen/SmallPadding"
        android:paddingStart="@dimen/SmallPadding"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_beer_abv_item_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_beer_rating_item"
        android:layout_toEndOf="@id/iv_beer_item_image"
        android:gravity="end"
        android:paddingEnd="@dimen/SmallPadding"
        android:paddingStart="@dimen/SmallPadding"
        android:textColor="@color/primary"
        android:textSize="@dimen/BeerFieldTextSize" />

    <TextView
        android:id="@+id/tv_beer_abv_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_beer_abv_item_field"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/iv_beer_item_image"
        android:gravity="end"
        android:paddingEnd="@dimen/SmallPadding"
        android:paddingStart="@dimen/SmallPadding"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_beer_style_item_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_beer_abv_item"
        android:layout_toEndOf="@id/iv_beer_item_image"
        android:gravity="end"
        android:paddingEnd="@dimen/SmallPadding"
        android:paddingStart="@dimen/SmallPadding"
        android:textColor="@color/primary"
        android:textSize="@dimen/BeerFieldTextSize" />

    <TextView
        android:id="@+id/tv_beer_style_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_beer_style_item_field"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/iv_beer_item_image"
        android:gravity="end"
        android:paddingEnd="@dimen/SmallPadding"
        android:paddingStart="@dimen/SmallPadding"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_beer_country_item_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_beer_style_item"
        android:layout_toEndOf="@id/iv_beer_item_image"
        android:gravity="end"
        android:paddingEnd="@dimen/SmallPadding"
        android:paddingStart="@dimen/SmallPadding"
        android:textColor="@color/primary"
        android:textSize="@dimen/BeerFieldTextSize" />

    <TextView
        android:id="@+id/tv_beer_country_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_beer_country_item_field"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/iv_beer_item_image"
        android:gravity="end"
        android:paddingEnd="@dimen/SmallPadding"
        android:paddingStart="@dimen/SmallPadding"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_beer_tags_item_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_beer_country_item"
        android:layout_toEndOf="@id/iv_beer_item_image"
        android:gravity="end"
        android:paddingEnd="@dimen/SmallPadding"
        android:paddingStart="@dimen/SmallPadding"
        android:textColor="@color/primary"
        android:textSize="@dimen/BeerFieldTextSize" />

    <TextView
        android:id="@+id/tv_beer_tags_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_beer_tags_item_field"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/iv_beer_item_image"
        android:gravity="end"
        android:paddingEnd="@dimen/SmallPadding"
        android:paddingStart="@dimen/SmallPadding"
        android:textColor="@color/white" />



</RelativeLayout>