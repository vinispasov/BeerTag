<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_user_item_image"
        android:layout_width="150dp"
        android:layout_height="150dp" />


    <TextView
        android:id="@+id/tv_user_username_item_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_user_item_image"
        android:gravity="end"
        android:paddingEnd="@dimen/SmallPadding"
        android:paddingStart="@dimen/SmallPadding"
        android:textColor="@color/primary"
        android:textSize="@dimen/UserFieldTextSize" />

    <TextView
        android:id="@+id/tv_user_username_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_user_username_item_field"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/iv_user_item_image"
        android:gravity="end"
        android:paddingEnd="@dimen/SmallPadding"
        android:paddingStart="@dimen/SmallPadding"
        android:textColor="@color/white"
        android:textSize="@dimen/ParametersFieldTextSize"/>

</RelativeLayout>