<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.beertag">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AndroidApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.beerslist.BeersListActivity" android:screenOrientation="portrait">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity
            android:name=".views.userslist.UsersListActivity"
            android:label="@string/title_activity_users_list"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".views.profile.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".views.beerdetails.BeerDetailsActivity"></activity>
    </application>

</manifest>